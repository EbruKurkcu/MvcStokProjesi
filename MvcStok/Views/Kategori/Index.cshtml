@using MvcStok.Models.Entity;
@model PagedList.IPagedList<TBLKATEGORILER>
@*Sayfalama 3.İşlem*@

@using PagedList;
@using PagedList.Mvc;
@*Sayfalama 4.İşlem*@


@*1- Veritabanımızdaki değerler için Entity klasörüne ulaşması sağlayan kod.List<> kodu*@
@*2- Kategoriler tablosunu Listeler*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>

    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KATEGORIID</th>
                <td>@ktgr.KATEGORIAD</td>
                <td> <a href="/Kategori/Sil/ @ktgr.KATEGORIID" class="btn btn-danger">SİL</a></td>
                <td> <a href="/Kategori/KategoriGetir/ @ktgr.KATEGORIID" class="btn btn-primary">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa })) @*Sayfalama 5.İşlem*@
<a href="/Kategori/YeniKategori/" class="btn btn-success"> KATEGORİ EKLE</a>

