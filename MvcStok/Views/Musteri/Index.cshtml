@using MvcStok.Models.Entity;
@model List<TBLMUSTERILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
    </tr>

    <tbody>
        @foreach (var mst in Model)
        {
            <tr>
                <th>@mst.MUSTERIID</th>
                <td>@mst.MUSTERIAD</td>
                <td>@mst.MUSTERISOYAD</td>
                <td><a href="/Musteri/Sil/ @mst.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Musteri/MusteriGetir/ @mst.MUSTERIID" class="btn btn-primary">GÜNCELLE</a></td>
                <td>
                    @*Silmeden önce bir kez daha teyit almak istenildiğinde alert komutu kullanılır*@
                    @Html.ActionLink("ALERT SİL BUTONU", "Sil", new { id = mst.MUSTERIID },
                    new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor musunuz?')" })
            </td>
        </tr>
}
    </tbody>
</table>

<a href="/Musteri/YeniMusteri/" class="btn btn-success">YENİ MÜŞTERİ</a>
